<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoBabyActivity">
    <Button
        android:id="@+id/sub1"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/exit_button"
        android:layout_width="25dp"
        android:layout_height="25dp"></Button>
    <TextView
        android:layout_marginTop="19dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/sub3"
        android:text="Tuần thứ 2"
        android:layout_marginLeft="19dp"
        android:layout_below="@id/sub1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:layout_below="@id/sub3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgbaby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ImageView>
            <TextView

                android:layout_margin="9dp"
                android:id="@+id/txtbaby"
                android:textColor="#615F5F"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>