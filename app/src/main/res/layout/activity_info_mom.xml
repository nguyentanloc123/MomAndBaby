<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoMomActivity">
    <Button
        android:id="@+id/sub1"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/exit_button"
        android:layout_width="25dp"
        android:layout_height="25dp"></Button>
    <ImageView
        android:id="@+id/imgsub2"
        android:layout_margin="19dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mom_image_info"></ImageView>

    <TextView
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/imgsub2"
        android:id="@+id/txtsub3"
        android:textSize="22sp"
        android:text="Lời khuyên cho mẹ"
        android:layout_marginLeft="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <androidx.cardview.widget.CardView
        android:paddingBottom="9dp"
        android:layout_marginBottom="19dp"
        app:cardCornerRadius="4dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:layout_below="@id/txtsub3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:textColor="#615F5F"
                android:textSize="16sp"
                android:id="@+id/txtmom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_marginBottom="19dp"
                android:layout_centerHorizontal="true"
                android:weightSum="2"
                android:layout_below="@id/txtmom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_marginRight="120dp"
                    android:background="@drawable/icon_like"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </Button>
                <Button
                    android:layout_marginRight="8dp"
                    android:rotation="180"
                    android:layout_marginLeft="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/icon_like_state"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                </Button>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout></ScrollView>